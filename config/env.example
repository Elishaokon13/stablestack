# ===========================================
# STRIPE ADVANCED CONFIGURATION (OPTIONAL)
# ===========================================
# Default currency for payments
STRIPE_DEFAULT_CURRENCY=usd

# Stripe API version (optional, defaults to latest)
STRIPE_API_VERSION=2025-08-27.basil

# Webhook endpoint URL (for production)
STRIPE_WEBHOOK_ENDPOINT=https://yourdomain.com/api/payments/webhook

# ===========================================
# BLOCKRADAR CONFIGURATION (REQUIRED)
# ===========================================
# Blockradar API key for stablecoin management
BLOCKRADAR_API_KEY=your_blockradar_api_key

# Blockradar wallet ID for receiving stablecoins
BLOCKRADAR_WALLET_ID=your_wallet_id

# Supported stablecoins (comma-separated)
BLOCKRADAR_SUPPORTED_TOKENS=USDC,USDT,DAI

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
# Alchemy API Key for blockchain interactions
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Treasury wallet private key (for crypto operations)
TREASURY_PRIVATE_KEY=your_treasury_wallet_private_key

# ===========================================
# PAYMENT LINK CONFIGURATION (OPTIONAL)
# ===========================================
# Default payment link expiration (in days)
PAYMENT_LINK_EXPIRY_DAYS=30

# Maximum payment amount (in cents)
MAX_PAYMENT_AMOUNT=1000000

# Minimum payment amount (in cents)
MIN_PAYMENT_AMOUNT=50

# ===========================================
# SECURITY CONFIGURATION (OPTIONAL)
# ===========================================
# Rate limiting for payment attempts
RATE_LIMIT_PAYMENTS_PER_MINUTE=10

# Allowed payment methods
STRIPE_ALLOWED_PAYMENT_METHODS=card,apple_pay,google_pay

# ===========================================
# MONITORING & ANALYTICS (OPTIONAL)
# ===========================================
# Vercel Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Development mode
NODE_ENV=development

# Debug mode for Stripe
STRIPE_DEBUG_MODE=true

# Test mode (use test keys in development)
STRIPE_TEST_MODE=false